<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-primary">
                <div class="panel-heading"> <h3 style="color:#ffffff"><b><center>Create New Book Details</center></b></h3></div>
          
    <div class="panel-body">


<%= form_tag :action => 'create' do %>
    <p><label for = "book_title">Title</label>:

      <%= text_field 'book', 'title' %></p>
    <p><label for = "book_price">Price</label>:

      <%= text_field 'book', 'price' %></p>
    <p><label for = "book_subject_id">Subject</label>:

      <%= collection_select(:book, :subject_id, @subjects, :id, :name, prompt: true) %></p>
    <p><label for = "book_description">Description</label><br/>

      <%= text_area 'book', 'description' %></p>
    <center><%= submit_tag "Create",:class => 'btn btn-info btn-xs' %></center>

<% end -%>
<%= link_to 'Back', {:action => 'list'},:class => 'btn btn-success btn-xs' %>