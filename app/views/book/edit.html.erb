<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-primary">
                <div class="panel-heading"> <h3 style="color:#ffffff"><b><center>Edit Book Details</center></b></h3></div>
          
    <div class="panel-body">



<%= form_for @book, :url =>{:action => "update", :id =>@book} do |f| %>

    <p>Title: <%= f.text_field 'title' %></p>
    <p>Price: <%= f.text_field  'price' %></p>
    <p>Subject: <%= f.collection_select :subject_id, Subject.all, :id, :name %></p>
    <p>Description<br/>

      <%= f.text_area 'description' %></p>
    <center><%= f.submit "Save",:class => 'btn btn-info btn-xs' %></center>
<% end %>

<%= link_to 'Back', {:action => 'list' },:class =>'btn btn-success btn-xs' %>

</div>
</div>
</div>
</div>
</div>